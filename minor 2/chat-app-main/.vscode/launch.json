{
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "type": "msedge",
            "name": "http://127.0.0.1:3000/chat.html",
            "request": "launch",
            "url": "http://127.0.0.1:3000/chat.html"
        }
    ]
}